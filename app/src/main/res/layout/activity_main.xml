<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.rahul.crmsample.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_head_main"
        android:text="Criminal Record Management System"
        android:textAlignment="center"
        android:textSize="35dp"
        android:layout_marginTop="25dp"
        android:textColor="#fff"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_login_main"
        android:layout_below="@id/tv_head_main"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:textSize="20dp"
        android:textStyle="normal"
        android:background="@drawable/button_round"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="155dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup_main"
        android:layout_below="@id/btn_login_main"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:textSize="20dp"
        android:textStyle="normal"
        android:background="@drawable/button_round"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="55dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/signUp_container"/>

</RelativeLayout>
